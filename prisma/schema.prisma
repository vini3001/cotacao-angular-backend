generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model cotacao {
  ID             Int      @id @default(autoincrement())
  DOLAR_VALUE    Float    @db.Float
  EURO_VALUE     Float    @db.Float
  PESOS_VALUE    Float    @db.Float
  VALUE          Float    @db.Float
  DATE_REGISTER  DateTime @default(now()) @db.DateTime()
  DATE_APURATION DateTime @db.DateTime()
}
